            <RelativeLayout

                android:id="@+id/relativeLayout_municipality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/Municipalitys"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="2dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/municipality_banner"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="20dp"
                    android:textStyle="italic" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_viewMunicipalityList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Municipalitys"
                    android:layout_marginTop="10dp"

                    android:scrollbars="horizontal"
                    tools:itemCount="6" />

            </RelativeLayout>





            <RelativeLayout
            android:layout_below="@+id/relativeLayout_municipality"
                android:id="@+id/relativeLayouta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/Articles"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="2dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/daily_33"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="italic" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_viewArticleList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Articles"
                    android:layout_marginTop="10dp"
                    android:scrollbars="horizontal"
                    tools:itemCount="6" />

            </RelativeLayout>



